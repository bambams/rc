free-the-music() {
    while read f; do
        local o="${f/%.???/.ogg}";

        if [[ ! -z $MUSIC_DIR_FREE ]] && [[ ! -z $MUSIC_DIR_NONFREE ]]; then
            o="${o/$MUSIC_DIR_NONFREE/$MUSIC_DIR_FREE}";
        fi;

        if [[ -f "$o" ]]; then
            echo "ok  $o";
        else
            echo "ogg $o";
            </dev/null ffmpeg -i "$f" "$o";
        fi;
    done < <(find "$HOME/music" "$HOME/Music" \
                -name '*.m4a' -o \
                -name '*.mp4');
};
