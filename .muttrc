# Basics.
set realname = "Brandon McCaig"
set from = bamccaig@gmail.com
set use_from = yes
set envelope_from = yes
set signature = ~/.signature
set sendmail = /usr/bin/msmtp
#set spoolfile = /var/mail/bamccaig

# Directories.
set folder = "$HOME/mail"
set record = +sent
set postponed = +postponed
set mbox_type = mbox
set move=no

# Mailboxes to watch.
mailboxes ! +alleg-developers +fedora-pkg-rev +mutt +perl-beginners
set sort_browser = alpha

# Headers.
ignore *
unignore Date: From: User-Agent: X-Mailer X-Operating-System TO: \
         Cc: Reply-To: Subject: Mail-Followup-To: User-Agent:
hdr_order Date: From: User-Agent: X-Mailer X-Operating-System TO: \
          Cc: Reply-To: Subject: Mail-Followup-To: User-Agent:

# Editor.
set editor="vim -c 'call Mail_mode()' '+/^$' "
set edit_headers = yes

# Macros.
macro index,pager G '<shell-escape> fetchmail<enter>'
macro index,pager p '<search-opposite>'

# Aliases.
set alias_file = ~/.mutt/aliases
source ~/.mutt/aliases
set sort_alias = alias

# Colors.
source ~/.mutt/colors

# Lists.
lists ^alleg-developers@ ^beginners@perl\\.org$ ^mutt-users@mutt\\.org$
lists ^slrn-user@
subscribe alleg-developers beginners mutt-users slrn-user
set followup_to = yes
set honor_followup_to = yes
fcc-hook ^alleg-developers@ +alleg-developers
fcc-hook ^beginners@perl\\.org$ +perl-beginners
fcc-hook ^mutt-user@mutt\\.org$ +mutt
fcc-hook ^slrn-user@ +slrn

# Sorting.
set sort = threads
#set sort_browser = reverse-date
#set sort_aux = reverse-last-date-received

# Misc.
set markers
set smart_wrap
set pager_context = 5
set status_on_top
push <show-version>

